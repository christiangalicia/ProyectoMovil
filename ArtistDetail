import React from 'react';
import { StyleSheet,Text,KeyboardAvoidingView,  View , Image, TextInput,TouchableOpacity} from 'react-native';
import ArtistBox from './ArtistBox';
import CommentList from './CommentList'
import Icon from 'react-native-vector-icons/FontAwesome';
import {firebaseDatabase} from './FireBase';
export default class ArtistDetail extends React.Component {
     state ={comment:'', comments:[]}
     
    send = ()=> {
       const id = this.props.artist.id;
         let comments = firebaseDatabase.ref('comments/'+id); 
          let key= comments.push();
         key.set({
             comment: this.state.comment,
         })
   }    
 
   componentDidMount(){
        const id = this.props.artist.id;
            let comments2 = firebaseDatabase.ref('comments/'+id); 
        comments2.on('child_added', (data) =>{ 
                  const com=  data.val();
                  this.setState(
                     {comments: this.state.comments.concat(com)})
        });
   }
   render() {    
     const artist= this.props.artist;
     return (  
        <View style={styles.container}>
             <ArtistBox artist ={artist} />
              <CommentList commentList={this.state.comments} />
                    <View  style={styles.inputContainer}>
                    <TextInput
                      style={styles.input}
                      placeholder="Opina sobre este artista"
                      onChangeText={ (text)=>this.setState({comment:text}) }
                    />
                    <TouchableOpacity onPress={this.send}>
                      <Icon name="location-arrow" size={30} color="gray" />
                    </TouchableOpacity>
                    </View>
                 
         </View>
         
  
    );
  }
}
const styles = StyleSheet.create({
  container: {
      backgroundColor: 'gray',
      flex:1,
  },  
  inputContainer:{
        flexDirection: 'row',
        alignItems:'center',
        position: 'absolute',
     bottom: 0,
    right: 0,
    left: 0,
        backgroundColor: 'white',
        height:50,
        paddingHorizontal:10,
   },
   input:{
    flex:1,
    height:50,
   },
  imagen:{
      width:150,  
      height:150
  },
  nombre: {
      fontSize: 28,   
      textAlign: 'center', 
   
  }, 
  likes:{
      flexDirection: 'row',
      justifyContent: 'space-around', 
  },
  info: {
    flex: 1,  
   justifyContent: 'center',
  },

});


